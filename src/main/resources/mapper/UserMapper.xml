<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zxy.galaxy.Mapper.UserMapper">
    <select id="findUserByUsername" parameterType="String" resultType="com.zxy.galaxy.Entity.User">
        select * from sys_user t where t.username = #{userName}
    </select>

</mapper>