<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxy.galaxy.Mapper.UserMapper">
    <sql id="baseCloumn" >
        uuid,username,password,email,status,type
    </sql>

    <select id="findUserByUsername" parameterType="java.lang.String" resultType="User">
        select 
        <include refid="baseCloumn"/>
        from sys_user
        where username = #{username}
        and status = 0
    </select>

    <insert id="addUser" parameterType="User">
        insert into sys_user(uuid,username,password,email,status,type)
        values (uuid(),#{username},#{password},#{eMail},#{status},#{type})
    </insert>
</mapper>